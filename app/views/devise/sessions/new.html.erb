<div class="text-center" >
<p style="color: green"><%= notice %></p>


      <%= image_tag("Login.png") %>
    <h2>Ingresar a su Sesión</h2>

    <%= form_for(resource, as: resource_name ,url: session_path(resource_name),class:"form-signin") do |f| %>
      <div class="field">
        <%= f.label :"Correo Electronico" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <br>
      <div class="field">
        <%= f.label :Contraseña %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
        <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :Recordarme %>
        </div>
      <% end %>
      <br>
      <div class="actions">
        <%= f.submit "Ingresar", class:"w-10 btn btn-lg btn-primary" %>
      </div>
      <br>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
